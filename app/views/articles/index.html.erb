<div id="all-articles">
  <div class="container">
    <h2 class="text-center mt-4">Listing All Articles</h2>
    <% if logged_in? %>
    <%= link_to 'Add New Article', new_article_path, class: 'btn btn-primary mb-4' %>
    <% end %>
    
    <%= render 'article' %>
    
    <div class="flickr_pagination mb-4">
      <%= will_paginate @articles, :container => false %>
    </div>
  </div>

</div>
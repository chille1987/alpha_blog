<h1>Create new article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>

  <div class="form-field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div class="form-field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.submit %>

<% end %>
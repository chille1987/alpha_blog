<div class="jumbotron">
  <div class="container text-center">
    <h1 class="display-4"><%= @article.title %></h1>
    <p><strong>Created at: </strong><%= time_ago_in_words(@article.created_at) %> ago</p>
  </div>
</div>

<div class="container">
  <p><%= @article.description %></p>

  <%= link_to 'Back to Articles', articles_path, class: 'btn btn-outline-primary' %>
  <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-outline-secondary' %>
  <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?" }, class: 'btn btn-outline-danger' %>
</div>
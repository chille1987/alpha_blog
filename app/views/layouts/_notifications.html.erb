<% flash.each do |name, msg| %>
  <div class="alert <% if name == 'alert' %>alert-danger<% else %>alert-success<% end %> alert-dismissible fade show m-4" role="alert">
    <%= msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
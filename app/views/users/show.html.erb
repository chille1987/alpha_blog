<div class="container">
  <h2><%= @user.username %><%= "(Admin)" if current_user.admin? %></h2>
  <%= gravatar_for @user %>
  <% if logged_in? && @user == current_user %>
    <%= link_to 'Edit User', edit_user_path(@user), class: "btn btn-outline-secondary btn-sm" %>
    <%= link_to 'Delete Profile', user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete this your profile? All your articles will be deleted as well!" }, class: "btn btn-outline-danger btn-sm" %>
  <% end %>
  <%= render 'articles/article' %>
  <div class="flickr_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
  </div>
</div>